<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.android.easterchallenge.MainActivity"
    android:background="@drawable/bb">


    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/six"
        android:layout_width="45dp"
        android:layout_height="46dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="10dp"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/lyla_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Forex Academy Nigeria"
        android:layout_toRightOf="@+id/logo"
        android:fontFamily="@string/abc_action_bar_home_description"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textColor="@android:color/background_light" />





    <ImageView
        android:src="@drawable/banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="center"
        android:id="@+id/imageView"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="create your financial future"
        android:fontFamily="@string/abc_action_bar_home_description"
        android:layout_below="@+id/lyla_text_view"
        android:layout_toRightOf="@+id/logo"
        android:layout_toEndOf="@+id/logo"
        android:textStyle="bold|italic"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do You want to become a World class Forex Trader?"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:background="@android:color/darker_gray"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="At Forex Academy, You will be trained by the most experienced of traders"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:background="@android:color/darker_gray"
        android:textSize="14sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enroll today @ www.forexacademynig/apply"
        android:id="@+id/textView3"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="#0af9c9"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Or Visit us @ "
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="No 298, Amadi Ama, Port Harcourt, Rivers State,Nigeria"
        android:id="@+id/textView6"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="For Enquiries"
        android:id="@+id/textView7"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Call +2348164035447"
        android:id="@+id/textView8"
        android:textSize="12sp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Visit www.forexacademynig.com"
        android:id="@+id/textView9"
        android:textSize="12sp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />


</RelativeLayout>







